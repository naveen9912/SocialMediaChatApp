@page "/"
@namespace SocialMediaChatApp.Pages
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Social Media Chat App</title>
    <base href="~/" />

    <!-- Bootstrap CSS CDN with fallback -->
    <link id="bootstrapCdn" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="css/site.css" rel="stylesheet" />
    <link rel="icon" type="image/png" href="favicon.png" />

    <script>
        // Bootstrap fallback if CDN fails
        window.addEventListener('error', function (e) {
            if (e.target.tagName === 'LINK' && e.target.id === 'bootstrapCdn') {
                const fallback = document.createElement('link');
                fallback.rel = 'stylesheet';
                fallback.href = '/css/bootstrap/bootstrap.min.css';
                document.head.appendChild(fallback);
            }
        }, true);
    </script>
</head>
<body class="bg-light">
    <app>
        <component type="typeof(App)" render-mode="ServerPrerendered" />
    </app>

    <!-- Blazor Server framework -->
    <script src="_framework/blazor.server.js"></script>

    <!-- SignalR CDN with fallback -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/6.0.0/signalr.min.js" onerror="loadLocalSignalR()"></script>
    <script>
        function loadLocalSignalR() {
            const script = document.createElement('script');
            script.src = '/js/signalr.min.js';
            document.body.appendChild(script);
        }
    </script>

    <!-- Custom chat logic -->
    <script src="js/chat.js"></script>

    <!-- Bootstrap JS for navbar toggle etc. -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>
